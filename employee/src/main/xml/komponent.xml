<?xml version="1.0" encoding="UTF-8"?>

<komponent name="Employee">

    <resources path="operativ/leistung/payroll">
        <resource name="Employees"
                  path="employees"
                  entity="Employee"
                  controller="EmployeeController">
            <method type="GET" name="findAllEmployees" result="list"/>
            <method type="POST" name="createEmployee"/>
            <method type="GET" name="findEmployee" result="single">
                <path-parameter name="number" java-type="String"/>
            </method>
        </resource>
    </resources>

    <topics>
        <producer topic="values" entity="Employee"/>
    </topics>

    <database>
        <dao target="cassandra" entity="Employee">
            <update/>
            <select/>
            <store/>
        </dao>
    </database>

    <datacatalog>
        <entity name="Employee">
            <field name="Number" type="String" key="true"/>
            <field name="SureName" type="String"/>
            <field name="FirstName" type="String"/>
            <field name="Street" type="String"/>
            <field name="PLZ" type="String"/>
            <field name="City" type="String"/>
            <field name="IBAN" type="String"/>
            <field name="WeeklyHours" type="BigDecimal"/>
            <field name="WageRate" type="BigDecimal"/>
        </entity>
    </datacatalog>
</komponent>