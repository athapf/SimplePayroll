# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
spaces_between_comma_and_parameters = 1

[*.{yaml,yml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.adoc]
max_line_length = off
trim_trailing_whitespace = false
